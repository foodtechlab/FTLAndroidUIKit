<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/ButtonDisableLight" />
                </shape>
            </item>
            <item android:bottom="12dp" android:drawable="@drawable/ic_my_location_selected_light_24" android:gravity="center" android:left="12dp" android:right="12dp" android:top="12dp" />
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/ButtonSecondaryPressedLight" />
                </shape>
            </item>
            <item android:bottom="12dp" android:drawable="@drawable/ic_my_location_24" android:gravity="center" android:left="12dp" android:right="12dp" android:top="12dp" />
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="@color/ButtonSecondaryEnableLight" />
                </shape>
            </item>
            <item android:bottom="12dp" android:drawable="@drawable/ic_my_location_24" android:gravity="center" android:left="12dp" android:right="12dp" android:top="12dp" />
        </layer-list>
    </item>

</selector>