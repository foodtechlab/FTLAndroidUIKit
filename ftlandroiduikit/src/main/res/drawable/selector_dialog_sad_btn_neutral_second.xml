<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <size android:height="48dp" />
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp" android:top="8dp" />
            <solid android:color="@color/OnSurfacePrimaryPressed" />
            <corners android:radius="4dp" />
        </shape>
    </item>

    <item android:state_first="false">
        <shape android:shape="rectangle">
            <size android:height="48dp" />
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp" android:top="8dp" />
            <solid android:color="@color/OnSurfacePrimaryEnabled" />
            <corners android:radius="4dp" />
        </shape>
    </item>

</selector>