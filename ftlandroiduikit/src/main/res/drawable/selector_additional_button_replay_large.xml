<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="#F6F6F6" />
                </shape>
            </item>
            <item android:bottom="12dp" android:drawable="@drawable/ic_replay_selected_24" android:gravity="center" android:left="12dp" android:right="12dp" android:top="12dp" />
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="#ECECEC" />
                </shape>
            </item>
            <item android:bottom="12dp" android:drawable="@drawable/ic_replay_24" android:gravity="center" android:left="12dp" android:right="12dp" android:top="12dp" />
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <corners android:radius="8dp" />
                    <solid android:color="#F6F6F6" />
                </shape>
            </item>
            <item android:bottom="12dp" android:drawable="@drawable/ic_replay_24" android:gravity="center" android:left="12dp" android:right="12dp" android:top="12dp" />
        </layer-list>
    </item>

</selector>