<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="48dp" android:height="48dp" />
                    <corners android:radius="8dp" />
                    <solid android:color="#212121" />
                </shape>
            </item>
            <item android:bottom="12dp" android:drawable="@drawable/ic_info_selected_dark_24" android:gravity="center" android:left="12dp" android:right="12dp" android:top="12dp" />
        </layer-list>
    </item>

    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="48dp" android:height="48dp" />
                    <corners android:radius="8dp" />
                    <solid android:color="#161616" />
                </shape>
            </item>
            <item android:bottom="12dp" android:drawable="@drawable/ic_info_dark_24" android:gravity="center" android:left="12dp" android:right="12dp" android:top="12dp" />
        </layer-list>
    </item>

    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <size android:width="48dp" android:height="48dp" />
                    <corners android:radius="8dp" />
                    <solid android:color="#212121" />
                </shape>
            </item>
            <item android:bottom="12dp" android:drawable="@drawable/ic_info_dark_24" android:gravity="center" android:left="12dp" android:right="12dp" android:top="12dp" />
        </layer-list>
    </item>

</selector>