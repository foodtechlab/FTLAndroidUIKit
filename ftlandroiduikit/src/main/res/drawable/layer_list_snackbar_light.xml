<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" />
        </shape>
    </item>

    <item
        android:bottom="16dp"
        android:left="16dp"
        android:right="16dp"
        android:top="16dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/SnackbarBackgroundLight" />
            <corners android:radius="4dp" />
            <padding
                android:bottom="14dp"
                android:top="14dp" />
        </shape>
    </item>

</layer-list>