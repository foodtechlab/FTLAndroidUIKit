<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" android:state_selected="false">
        <shape android:shape="rectangle">
            <size android:height="48dp" />
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp" android:top="8dp" />
            <solid android:color="@color/ButtonDangerPressedLight" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item android:state_selected="true">
        <shape android:shape="rectangle">
            <size android:height="48dp" />
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp" android:top="8dp" />
            <solid android:color="@color/ButtonDisableLight" />
            <corners android:radius="8dp" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <size android:height="48dp" />
            <padding android:bottom="8dp" android:left="16dp" android:right="16dp" android:top="8dp" />
            <solid android:color="@color/ButtonDangerEnableLight" />
            <corners android:radius="8dp" />
        </shape>
    </item>

</selector>