<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/ll_ftl_banner_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="8dp"
        android:paddingTop="12dp"
        android:paddingEnd="8dp"
        android:paddingBottom="8dp">

        <TextView
            android:id="@+id/tv_ftl_banner_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_bold"
            android:letterSpacing=".015"
            android:lineSpacingExtra="8dp"
            android:textSize="16sp"
            android:visibility="gone"
            tools:text="Title"
            tools:textColor="@color/TextPrimaryLight"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_ftl_banner_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:letterSpacing=".025"
            android:lineSpacingExtra="6sp"
            android:textSize="14sp"
            tools:text="Для изменения звука оповещения либо при наличии проблем с уведомлениями перейдите в настройки устройства"
            tools:textColor="@color/TextOnColorAdditionalLight" />

    </LinearLayout>
</merge>