<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_image_slot"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/ic_money"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_top_start_slot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:lineSpacingExtra="5sp"
                    android:textColor="@color/OnSurfaceSecondary"
                    android:textSize="16sp"
                    tools:text="Наличными" />

                <TextView
                    android:id="@+id/tv_top_end_slot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="end"
                    android:lineSpacingExtra="5sp"
                    android:textColor="@color/OnSurfaceSecondary"
                    android:textSize="16sp"
                    tools:text="1 000 Р" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_bottom_start_slot"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:lineSpacingExtra="2sp"
                    android:textColor="@color/OnSurfacePrimaryAdditionalDark"
                    android:textSize="12sp"
                    tools:text="Без сдачи" />

                <TextView
                    android:id="@+id/tv_bottom_end_slot"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="end"
                    android:lineSpacingExtra="2sp"
                    android:textColor="@color/OnSurfacePrimaryAdditionalDark"
                    android:textSize="12sp"
                    tools:text="Сумма: 1 000 Р" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</merge>