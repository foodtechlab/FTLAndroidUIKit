<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SadBottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
    </style>

    <style name="TransparentBottomSheetStyle">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="FTLCardStyle" parent="Base.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_margin">8dp</item>
        <item name="backgroundColor">@color/OnBackground</item>
    </style>

</resources>