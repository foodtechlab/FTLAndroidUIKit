<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="SadBottomSheetDialogStyle" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/TransparentBottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <style name="TransparentBottomSheetStyle">
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="FTLCardViewStyle" parent="Base.CardView">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="cardUseCompatPadding">false</item>
        <item name="cardPreventCornerOverlap">true</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="FTLAutocompleteEditTextStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="endIconMode">clear_text</item>
        <item name="colorControlNormal">@android:color/transparent</item>
        <item name="colorControlActivated">@color/TextViewDividerFocusedLight</item>
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>
</resources>