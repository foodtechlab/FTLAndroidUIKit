<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.foodtechlab.ftlandroiduikit.bar.toolbar.FTLToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:isShadowVisible="true"
            app:logoIcon="@drawable/ic_info_24"
            app:subtitle="Subtitle"
            app:title="Title" />

        <com.foodtechlab.ftlandroiduikit.textfield.time.FTLDeliveryTimeView
            android:id="@+id/ftl_delivery_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:size="large"
            app:status="urgent" />

        <com.foodtechlab.ftlandroiduikit.textfield.FTLDeliveryTimerView
            android:id="@+id/ftl_delivery_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:deliveryTimerView_size="large" />

        <Button
            android:id="@+id/btn_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Simple btn" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
