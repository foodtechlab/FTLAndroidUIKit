<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:paddingTop="?attr/actionBarSize"
        android:paddingBottom="?attr/actionBarSize">

        <LinearLayout
            android:id="@+id/ll_root"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.foodtechlab.ftlandroiduikit.button.FTLButtonPrimary
                android:id="@+id/ftl_open_dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Open dialog" />

            <com.foodtechlab.ftlandroiduikit.button.FTLButtonPrimary
                android:id="@+id/ftl_make_code_is_wrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Make code is Wrong" />

            <com.foodtechlab.ftlandroiduikit.button.FTLButtonPrimary
                android:id="@+id/ftl_make_field_is_wrong"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="Make field is Wrong" />

            <com.foodtechlab.ftlandroiduikit.textfield.FTLEditTextDefault
                android:id="@+id/ftl_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:hint="Hint hint"
                app:text="kjjhhgj" />

            <com.foodtechlab.ftlandroiduikit.textfield.FTLEditTextAuthCode
                android:id="@+id/code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="16dp"
                android:digits="1234567890"
                android:inputType="phone"
                android:maxLength="12" />

            <com.foodtechlab.ftlandroiduikit.textfield.FTLTextFieldRoute
                android:id="@+id/tv_addresses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:textAddressTo="Волгоград, ул. им Рокоссовского д.62 кв./оф. 102 под.1 эт 24" />

            <com.foodtechlab.ftlandroiduikit.textfield.FTLTextFieldMultiple
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:textBottomStartSlot="К оплате: 750 р"
                app:textTopStartSlot="Картой курьеру"
                app:type="CARD_COURIER" />

            <com.foodtechlab.ftlandroiduikit.textfield.FTLTextFieldMultiple
                android:id="@+id/ftl_tv_multiple"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />

            <com.foodtechlab.ftlandroiduikit.textfield.FTLTextFieldExtendable
                android:id="@+id/ftl_tv_extendable"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp" />

            <com.foodtechlab.ftlandroiduikit.textfield.FTLTextFieldExtendable
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                app:ellipsizedText="... еще"
                app:fullText="Воу привет! А можно ли мне какой-нибудь, очень вкусный комплимент"
                app:imageType="CUSTOMER" />
        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <com.foodtechlab.ftlandroiduikit.bar.FTLBottomNavigationView
        android:id="@+id/ftl_bnv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

    <com.foodtechlab.ftlandroiduikit.bar.toolbar.FTLToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:endIcon="@drawable/ic_close_24"
        app:logoIcon="@drawable/ic_inbox_checked_24"
        app:startIcon="@drawable/ic_back"
        app:subtitle="Position: 0"
        app:title="My orders" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
