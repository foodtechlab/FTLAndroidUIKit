<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_anchor="@+id/linearLayout"
        app:layout_anchorGravity="center">

        <com.foodtechlab.ftlandroiduikit.bar.toolbar.FTLToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ftlToolbar_logo_icon="@drawable/ic_info_24"
            app:ftlToolbar_shadow_visible="true"
            app:ftlToolbar_subtitle="Subtitle"
            app:ftlToolbar_title="Title" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.foodtechlab.ftlandroiduikit.textfield.timer.FTLDeliveryTimerView
                android:id="@+id/ftlTimerView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:deliveryTimerView_size="large" />

            <com.foodtechlab.ftlandroiduikit.button.FTLButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <com.foodtechlab.ftlandroiduikit.textfield.time.FTLDeliveryTimeView
                android:id="@+id/ftlTimeView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                app:size="large"
                app:status="usual" />

            <com.foodtechlab.ftlandroiduikit.button.FTLButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_weight="1" />
        </LinearLayout>

        <com.foodtechlab.ftlandroiduikit.button.timer.FTLTimerButton
            android:id="@+id/ftlTimerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:ftlTimerButton_bounceDotColor="@color/PrimaryDangerPressed"
            app:ftlTimerButton_textColor="@color/selector_ftl_button_additional" />

        <com.foodtechlab.ftlandroiduikit.textfield.FTLEditTextDefault
            android:id="@+id/ftlEditTextDefault"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:hint="Simple hint"
            app:filters="1234567890+()- "
            app:imeOptions="actionDone"
            app:inputType="phone" />
      
        <com.foodtechlab.ftlandroiduikit.button.image.FTLImageButton
            android:id="@+id/ftlImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:type="info_small" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/edit_query"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            app:digits="1234567890+()- " />
    </LinearLayout>

    <com.foodtechlab.ftlandroiduikit.bar.FTLBottomNavigationView
        android:id="@+id/ftlBottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
