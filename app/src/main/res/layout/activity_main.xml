<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.foodtechlab.ftlandroiduikit.bar.toolbar.FTLToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ftlToolbar_logo_icon="@drawable/ic_info_24"
            app:ftlToolbar_shadow_visible="true"
            app:ftlToolbar_subtitle="Subtitle"
            app:ftlToolbar_title="Title" />

        <com.foodtechlab.ftlandroiduikit.button.FTLButton
            android:id="@+id/ftl_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:ftlButton_title="Click"
            app:ftlButton_type="cancel" />

        <com.foodtechlab.ftlandroiduikit.button.timer.FTLTimerButton
            android:id="@+id/ftl_timer_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />

        <com.foodtechlab.ftlandroiduikit.button.additional.FTLAdditionalButton
            android:id="@+id/ftl_additional_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Click" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
