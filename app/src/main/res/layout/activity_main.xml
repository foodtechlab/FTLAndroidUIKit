<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.foodtechlab.ftlandroiduikit.bar.toolbar.FTLToolbar
            android:id="@+id/ftl_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:subtitle="Subtitle"
            app:title="Title" />

        <com.foodtechlab.ftlandroiduikit.button.additional.FTLButtonAdditional
            android:id="@+id/ftl_btn_additional_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="34234234"
            app:type="navigator_small" />

        <com.foodtechlab.ftlandroiduikit.button.additional.FTLButtonAdditional
            android:id="@+id/ftl_btn_additional_medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:type="location_medium" />

        <com.foodtechlab.ftlandroiduikit.button.additional.FTLButtonAdditional
            android:id="@+id/ftl_btn_additional_large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:type="info_large" />

        <Button
            android:id="@+id/btn_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:text="Simple btn" />

    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>
