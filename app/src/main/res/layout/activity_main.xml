<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.foodtechlab.ftlandroiduikit.bar.toolbar.FTLToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ftlToolbar_logo_icon="@drawable/ic_info_24"
            app:ftlToolbar_shadow_visible="true"
            app:ftlToolbar_subtitle="Subtitle"
            app:ftlToolbar_title="Title" />

        <com.foodtechlab.ftlandroiduikit.button.FTLButton
            android:id="@+id/ftlButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:ftlButton_dotColor="@color/PrimaryDangerPressed"
            app:ftlButton_text="Click"
            app:ftlButton_textColor="@color/selector_ftl_button_additional"
            app:ftlButton_type="additional" />

        <com.foodtechlab.ftlandroiduikit.textfield.time.FTLDeliveryTimeView
            android:id="@+id/ftlTimeView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <com.foodtechlab.ftlandroiduikit.button.timer.FTLTimerButton
            android:id="@+id/ftlTimerButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp" />

        <com.foodtechlab.ftlandroiduikit.button.image.FTLImageButton
            android:id="@+id/ftlImageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:type="info_small" />

        <com.foodtechlab.ftlandroiduikit.map.FTLRestaurantMarker
            android:id="@+id/ftlFirstMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <com.foodtechlab.ftlandroiduikit.map.FTLRestaurantMarker
            android:id="@+id/ftlSecondMarker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <com.foodtechlab.ftlandroiduikit.bar.FTLBottomNavigationView
        android:id="@+id/ftlBottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
