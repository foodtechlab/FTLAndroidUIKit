<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".main.MainActivity">

    <com.foodtechlab.ftlandroiduikit.container.FTLLinearLayout
        android:id="@+id/llContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="226dp">

        <com.foodtechlab.ftlandroiduikit.bar.toolbar.FTLToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:ftlToolbar_end_icon="@drawable/ic_arrow_down_24"
            app:ftlToolbar_start_icon="@drawable/ic_back"
            app:ftlToolbar_subtitle="Subtitle"
            app:ftlToolbar_title="Title" />

        <TextView
            android:id="@+id/btnSwitchTheme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:gravity="center"
            android:padding="12dp"
            android:text="Switch theme" />

        <com.foodtechlab.ftlandroiduikit.textfield.table.FTLTableRow
            android:id="@+id/ftlTableRow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:textForCenterColumn="Center"
            app:textForEndColumn="End"
            app:textForStartColumn="Start" />

        <com.foodtechlab.ftlandroiduikit.textfield.FTLDefaultTextView
            android:id="@+id/ftlDefaultTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:textForSlot="FTLDefaultTextView" />

        <com.foodtechlab.ftlandroiduikit.textfield.FTLExtendableTextView
            android:id="@+id/ftlExtendableTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:ellipsizedText="..ะตัะต"
            app:fullText="FTLExtendableTextView FTLExtendableTextView FTLExtendableTextView FTLExtendableTextViewFTLExtendableTextView FTLExtendableTextView FTLExtendableTextView FTLExtendableTextViewFTLExtendableTextView FTLExtendableTextView FTLExtendableTextView FTLExtendableTextViewFTLExtendableTextView FTLExtendableTextView FTLExtendableTextView FTLExtendableTextView" />

        <com.foodtechlab.ftlandroiduikit.map.FTLRestaurantMarker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:textOrdersCount="12" />
    </com.foodtechlab.ftlandroiduikit.container.FTLLinearLayout>

    <ImageView
        android:id="@+id/screenImageView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone" />

</androidx.constraintlayout.widget.ConstraintLayout>
