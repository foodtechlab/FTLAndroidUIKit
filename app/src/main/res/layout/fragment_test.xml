<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cl_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.foodtechlab.ftlandroiduikit.progress.FTLLinearProgressIndicator
        android:id="@+id/lpi1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:trackCornerRadius="2dp"
        app:trackThickness="10dp" />

    <com.foodtechlab.ftlandroiduikit.textfield.ftlsectiontextview.FTLSectionTextView
        android:id="@+id/tv1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:rightSlotType="CHECKBOX"
        app:textForTopSlot="hello"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lpi1"
        android:layout_margin="16dp"/>

    <com.foodtechlab.ftlandroiduikit.progress.FTLCircleScaleView
        android:id="@+id/csv2"
        android:layout_width="82dp"
        android:layout_height="82dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1"
        app:currentProgress="10"
        app:sizeProgress="82dp"
        app:cornerRadius="3dp"
        app:thickness="6dp"
        android:layout_margin="16dp"/>

    <com.foodtechlab.ftlandroiduikit.progress.FTLCircleScaleView
        android:id="@+id/csv3"
        android:layout_width="32dp"
        android:layout_height="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/csv2"
        app:currentProgress="10"
        android:layout_margin="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>